@model NewspaperDoAnV2.Models.Comment
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_UserDetailMasterLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="user__commenent__box mt-3">
            <div class="d-flex justify-content-between p-2">
                <div class="d-flex w-100">
                    <p class="fw-bold">
                        @Html.DisplayFor(model => model.User.UserName) :
                    </p>
                    <p style="margin-left : 20px; width : 80%">
                        Nội Dung Bình Luận
                        @Html.EditorFor(model => model.comment_noidung, new { htmlAttributes = new { @class = "form-control mt-2" } })
                    </p>
                </div>

                <div>
                    <p> @Html.DisplayFor(model => model.ThoiDiem_Comment)</p>
                </div>
            </div>

            <div class="d-flex">
                <p class="fw-bolder"> Tên Bài Báo : @Html.DisplayFor(model => model.Newspaper.Newspaper_tieude)</p>
            </div>

            <div>
                <input type="submit" value="Lưu Chỉnh Sửa" class="btn btn-primary" />
            </div>
        </div>
    </div>
 }
      