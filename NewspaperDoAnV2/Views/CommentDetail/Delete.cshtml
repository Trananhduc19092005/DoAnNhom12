@model NewspaperDoAnV2.Models.Comment

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_UserDetailMasterLayout.cshtml";
}

<style>
    .user__commenent__box {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        padding: 10px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <h4> Bạn Có Muốn Xóa Phần Comment Không Này Không ? </h4>
        <div class="user__commenent__box mt-3">
            <div class="d-flex justify-content-between p-2">
                <div class="d-flex w-25">
                    <p class="fw-bold">
                        @Html.DisplayFor(model => model.User.UserName) :
                    </p>
                    <p style="margin-left : 20px;">
                        @Html.DisplayFor(model => model.comment_noidung)
                    </p>
                </div>

                <div>
                    <p> @Html.DisplayFor(model => model.ThoiDiem_Comment)</p>
                </div>

                <div class="d-flex flex-column" style="height : 50px;">
                    @Html.ActionLink("Trở Về Danh Sách" , "Index" , "" , new {@class = "btn btn-outline-success mb-2"})
                    <input type="submit" value="Tôi Xác Nhận Muốn Xóa Bình Luận" class="btn btn-danger" />
                </div>
            </div>

            <div class="d-flex">
                <p class="fw-bolder"> Tên Bài Báo : @Html.DisplayFor(model => model.Newspaper.Newspaper_tieude)</p>
            </div>

        </div>
    </div>


}    