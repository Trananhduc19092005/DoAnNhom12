@model NewspaperDoAnV2.Models.Danh_muc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_adminlayout.cshtml";
}

<h2>
    Chỉnh Sửa Danh Mục
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.danhmuc_id)

        <div class="form-group">
            <p class="mb-2">Nội Dung Danh Mục</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.danhmuc_noidung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.danhmuc_noidung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu Danh Mục" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Trở Lại Danh Sách Danh Mục", "Index" , "Danh_muc" , new {@class = "btn btn-success"})
</div>
