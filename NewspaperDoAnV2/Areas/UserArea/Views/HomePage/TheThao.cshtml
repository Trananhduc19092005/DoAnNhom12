@model IEnumerable<NewspaperDoAnV2.Models.Newspaper>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/UserArea/Views/Shared/_UserMasterLayout.cshtml";
}
<style>
    .boxes {
        box-shadow: 0px 2px 5px 0px black;
        padding: 40px;
    }

    .TheThaoBtn {

    
        background: #0B5ED7;
        color: white;
    
    }

    .TheThaoBtn:hover
    {
        color : white;
    }
</style>
@foreach (var items in Model)
{
    if (items.Danh_muc.danhmuc_noidung == "Thể Thao")
    {
        <div class="mt-5 mb-5 boxes">
            <div class="row row-cols-2">
                <div class="col col-6">
                    <img src="@Html.DisplayFor(model => items.Newspaper_anh)" class="w-100" />
                </div>

                <div class="col col-6 position-relative">

                    <h2>
                        @Html.DisplayFor(model => items.Newspaper_tieude)
                    </h2>

                    <p>
                        @Html.DisplayFor(model => items.Newspaper_tieudephu)
                    </p>


                    <p style="display: -webkit-box; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; -webkit-line-clamp: 5">
                        @Html.DisplayFor(model => items.Newspaper_noidung)
                        @Html.Raw(items.Newspaper_noidung.Replace(Environment.NewLine, "<br/>"))
                    </p>

                    <div class="d-flex align-items-end">
                        @Html.ActionLink("Đọc Thêm", "BaiBao", "HomePage", new { id = items.NewspaperId }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    }
}




